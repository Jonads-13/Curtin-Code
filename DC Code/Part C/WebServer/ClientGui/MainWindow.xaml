<Window x:Class="ClientGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="PortText" Text="PortNumber" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Label Name="Portlabel" Content="Enter Port Number:" HorizontalAlignment="Left" Margin="226,195,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.376,0.464"/>
        <Button Name="PortButton" Content="Select" HorizontalAlignment="Left" Margin="482,198,0,0" VerticalAlignment="Top" Click="PortButton_Click"/>

    </Grid>
</Window>
